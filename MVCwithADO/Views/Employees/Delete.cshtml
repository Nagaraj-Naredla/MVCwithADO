@model MVCwithADO.Models.Employees

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <form action="/Employees/DeleteEmp" method="post">
        <div class="container">
            <h2>Delete Employee</h2>
            <p>Are you sure you want to delete this employee?</p>
            <div class="mb-3">
                <label for="empID" class="form-label"> EmployeeID</label>
                <input type="text" class="form-control" placeholder="Enter EmployeeID" id="empID" name="EmpID">
            </div>
        </div>
        <button type="submit" class="btn btn-outline-danger">Delete</button>
    </form>
    <div>
        <a href="/" class="btn btn-outline-info">Back to Index</a>
    </div>
</body>
</html>
